    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@lib/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@lib/env(|/.*)$": "<rootDir>/libs/env/src/$1",
      "^@lib/user(|/.*)$": "<rootDir>/libs/user/src/$1"
