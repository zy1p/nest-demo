{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lib/auth": "<rootDir>/../libs/auth/src",
    "@lib/auth/(.*)": "<rootDir>/../libs/auth/src/$1"
  }
}
